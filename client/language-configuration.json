{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">", "notIn": ["string"] },
    { "open": "\"", "close": "\"", "notIn": ["comment"] },
    { "open": "'", "close": "'", "notIn": ["comment"] }
  ],
  "surroundingPairs": [
    { "open": "<", "close": ">" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#region\\b.*-->",
      "end": "^\\s*<!--\\s*#endregion\\b.*-->"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}